{
  "compilerOptions": {
    /* === Núcleo de compilación === */
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,

    /* === React / JSX === */
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    /* === Tipos y validación === */
    "types": ["react", "react-dom"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* === Compatibilidad y sintaxis moderna === */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* === Rutas personalizadas (alias) === */
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@features/*": ["features/*"],
      "@components/*": ["components/*"],
      "@routes/*": ["routes/*"],
      "@context/*": ["context/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
